<launch>
  <!-- CSV → /global_path 퍼블리셔가 먼저 올라와 있어야 함 -->
  <node pkg="inha_asl" type="pure_pursuit_ack" name="pure_pursuit_ack" output="screen">
    <param name="lookahead" value="0.3"/>
    <param name="wheelbase" value="0.26"/>
    <param name="speed"     value="1.2"/>
    <param name="min_speed_ratio" value="0.25"/>
    <param name="max_steer_angle" value="0.418"/>
    <param name="search_window"   value="40"/>
    <param name="path_scale"      value="0.70"/>   <!-- ★ 트랙 실측 30 cm / CSV 76 cm -->

  </node>
</launch>
